.container {
  width: 240rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
  position: relative;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.container .description {
  position: absolute;
  bottom: 0px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 5rpx 10rpx 8rpx 15rpx;
  border-bottom-right-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  /* 真正宽度要加上 panding border *//* 240rpx - 10prx - 15rpx = 215rpx, 不取奇数, 216rpx */
  width: 216rpx;
  font-size: 24rpx;
}

.title {
  margin: 10rpx 0 0 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author {
  margin: -5rpx 0 10rpx 0;
  font-size: 20rpx;
  color: #999;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}

.footer {
  color: #666;
}
