.container {
  width: 100%;
  background-color: #f5f5f5;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
}

.title {
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.shadow {
  color: #999;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 4rpx 4rpx 6rpx #e3e3e3;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  width: 690rpx;
  background-color: #fff;
}

.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.comment-container > v-tag:nth-child(1) > view {
  background-color: #fffbdd;
}

.comment-container > v-tag:nth-child(2) > view {
  background-color: #eefbff;
}

.comment-container .num {
  font-size: 22rpx;
  margin-left: 10rpx;
  color: #aaa;
}

.sub-container .content {
  text-indent: 58rpx;
  font-weight: 500;
}

.detail-contaner {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  width: 100%;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

/* .vertical-1 {
  align-items: flex-end;
} */

.description {
  margin-right: 30rpx;
  color: #999;
}

.post-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  box-shadow: 1px -1px 1px #e3e3e3;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  border-radius: 15px;
  border: 1px solid #999;
  height: 60rpx;
  width: 460rpx;
  font-size: 22rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.posting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  height: 100rpx;
}

.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}

.posting-container .comment-container {
  padding: 0 30rpx;
  width: 690rpx;
}

.post {
  margin: 30rpx auto;
  padding-left: 25rpx;
  height: 56rpx;
  width: 690rpx;
  border-radius: 15px;
  background-color: #f5f5f5;
}

.share-btn {
    margin-top: 28rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}

